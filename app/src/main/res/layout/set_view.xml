<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_recycler_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <View
        android:id="@+id/set_separator"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginBottom="12dp"
        android:background="@color/black"/>

    <ImageView
        android:id="@+id/set_image"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_separator"
        android:adjustViewBounds="true"
        android:src="@drawable/no_image_200px"/>

    <TextView
        android:id="@+id/set_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_separator"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_toRightOf="@id/set_image"
        android:text="Dummy title"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/set_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_title"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="0dp"
        android:layout_toRightOf="@id/set_image"
        android:text="Dummy summary"/>
</RelativeLayout>